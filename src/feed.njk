---json
{
  "permalink": "feed.xml",
  "eleventyExcludeFromCollections": true
}
---
<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="/assets/rss.xsl" media="all"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
<channel>
  <title>{{ site.title }}</title>
  <link>{{ site.url }}/</link>
  <atom:link href="{{ site.url }}/{{ permalink }}" rel="self" type="application/rss+xml"/>
  <description>{{ site.description }}</description>
  {%- for post in collections.posts %}
  {% set absolutePostUrl %}{{ post.url | url | absoluteUrl(site.url) }}{% endset %}
  <item>
    <title>{{ post.data.title }}</title>
    <link>{{ absolutePostUrl }}</link>
    {%- for tag in post.data.tags %}
    {% if tag != "posts" %}
    <category>{{ tag }}</category>
    {% endif %}
    {%- endfor %}
    <guid isPermaLink="false">{{ post.data.slug }}</guid>
    <pubDate>{{ post.date | dateToRfc822 }}</pubDate>
    <description>{{ post.data.description }}</description>
    <content:encoded>{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}
    </content:encoded>
  </item>
  {%- endfor %}
</channel>
</rss>